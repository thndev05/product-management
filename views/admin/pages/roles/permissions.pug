extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  if(role.permissions.includes('roles_permissions'))
    +alert-success(3000)

    h1(class="mb-4") Phân quyền

    if(documents)
      div(class='d-none' data-documents=documents)

      div(class="text-right")
        button(
          type="submit"
          class="btn btn-primary mb-3"
          button-submit-permissions
        ) Cập nhật

      table(
        class="table table-hover table-sm"
        table-permissions
      )
        thead
          tr
            th Tính năng
            each item in documents
              th(class="text-center") #{item.title}
        tbody
          tr(data-name="id" class="d-none")
            td
            each item in documents
              td(class="text-center")
                input(type="text" value=item.id)
          tr
            td(colspan="4")
              b Danh mục sản phẩm
          tr(data-name="products-category_view")
            td Xem
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="products-category_create")
            td Thêm mới
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="products-category_edit")
            td Chỉnh sửa
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="products-category_delete")
            td(style="color: red") Xóa
            each item in documents
              td(class="text-center")
                input(type="checkbox")

          //- Sản phẩm
          tr
            td(colspan="4")
              b Sản phẩm
          tr(data-name="products_view")
            td Xem
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="products_create")
            td Thêm mới
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="products_edit")
            td Chỉnh sửa
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="products_delete")
            td(style="color: red") Xóa
            each item in documents
              td(class="text-center")
                input(type="checkbox")

          //- Nhóm quyền
          tr
            td(colspan="4")
              b Nhóm quyền
          tr(data-name="roles_view")
            td Xem
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="roles_create")
            td Thêm mới
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="roles_edit")
            td Chỉnh sửa
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="roles_delete")
            td(style="color: red") Xóa
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="roles_permissions")
            td Phân quyền
            each item in documents
              td(class="text-center")
                input(type="checkbox")

          //- Tài khoản
          tr
            td(colspan="4")
              b Tài khoản
          tr(data-name="accounts_view")
            td Xem
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="accounts_create")
            td Thêm mới
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="accounts_edit")
            td Chỉnh sửa
            each item in documents
              td(class="text-center")
                input(type="checkbox")
          tr(data-name="accounts_delete")
            td(style="color: red") Xóa
            each item in documents
              td(class="text-center")
                input(type="checkbox")


    form(
      form-change-permissions
      method="POST"
      action=`${prefixAdmin}/roles/permissions?_method=PATCH`
      class="d-none"
    )
      div(class="form-group")
        input(
          type="text"
          class="form-control"
          name="permissions"
        )
  else
    h1(class="text-danger") Bạn không có quyền truy cập trang web này.

  script(src="/admin/js/role.js") 